      crossorigin="anonymous"
    ></script>
  <script>

    function deleteResume(){
      swal({
        title:"Are you sure to delete",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      }).then((value) => {
        console.log(value);
        if(value){
          $.get("/delete",(data)=>{
            swal({title:data.message}).then(()=>{
              location.reload();
            });
          });
        }
      });
    }  
    
    var form = document.querySelector("#fileUploadForm");
    form.addEventListener("submit",(e)=>{
      e.preventDefault();
      form=$("#fileUploadForm")[0];
      data=new FormData(form);
      $.ajax({
            type: "POST",
            enctype: 'multipart/form-data',
            url: "/upload",
            data: data,
            processData: false,
            contentType: false,
            cache: false,
            timeout: 600000,
            success: function (data) {
              if(data.upload){
                swal({title:"Resume Uploaded successFully",icon:"success"}).then(()=>{
                  location.reload();
                });
              }
              else
                swal({title:data.error,icon:"error"});
              }
        });
    });
   
</script>
