                    <img src="<%=user.photo%>" class="rounded-circle">
                  </a>
                </div>
              </div>
            </div>
            <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
              <div class="d-flex justify-content-between">
                <!-- <a href="#" class="btn btn-sm btn-info  mr-4 ">Connect</a>
                <a href="#" class="btn btn-sm btn-default float-right">Message</a> -->
              </div>
            </div>
            <div class="card-body pt-0">
              <div class="row">
              </div>
              <div class="text-center mt-5" >
                <h1><%=user.name%> </h1> 
                <div class="d-flex justify-content-center" >
               <input type="text" class="form-control col-4 text-center" value="<%=user.username%>" placeholder="username" id="username" readonly >
               <button class="btn" id="changebtn" onclick="changeuser(0)"  style="display: inline;"><i class="fas fa-edit"></i></button>
               <button class="btn" id="savechnage" onclick="changeuser(1)" style="display: none;"><i class="fas fa-save"></i></button>
            </div>

               <div id="usernamesection" >
               
              </div>
                
            
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-8 order-xl-1">
          <div class="card">
            <div class="card-header">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">Edit profile </h3>
                </div>
                <div class="col-4 text-right">
                  <a href="#!" class="btn btn-sm btn-primary">Modify resume</a>
                </div>
              </div>
            </div>
            <div class="card-body">
              
                   <!-- Upload resume -->
                   <%if(!user.status){%>
                <h6 class="heading-small text-muted mb-4">Upload your resume</h6>
                <div class="pl-lg-4">
                <form id="fileUploadForm"> 
                  <div class="d-flex mb-5">
                  <input type="file" class="col-6 mr-3" id="myfile" name="upload" required>
                  <button class="btn btn-info" type="submit">Upload</button>
                  </div>
                </form> 
                <hr class="my-4">
                <%}%>
                <!-- upload resume end -->
                
                <!-- if there is resume -->
                <%if(user.status){%>
                <h6 class="col-lg-2 heading-small text-muted mb-4">Your resume</h6>
                <div class="pl-lg-4">
                <div class="d-flex mb-5">
                <input type="text " class="col-6 form-control mr-2" value="https://resumevault.herokuapp.com/<%=user.email%>" id="myInput" readonly>
                <button class="btn btn-info" onclick="myFunction()">Copy Link</button>
                </div>
                
                  <div class=" mb-4 d-flex justify-content-center form-inline">
                    <a href="/<%=user.email%>" target="_blank">
                    <div>
                      <div class="mb-4 d-flex justify-content-center">
