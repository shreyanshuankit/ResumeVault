    <!-- Page content -->
    <div class="container-fluid mt--6">
      <div class="row">
        <div class="col-xl-4 order-xl-2">
          <div class="card card-profile">
            <!-- <img src="/assets/images/theme/img-1-1000x600.jpg" alt="Image placeholder" class="card-img-top"> -->
